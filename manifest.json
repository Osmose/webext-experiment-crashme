{
  "manifest_version": 2,
  "name": "Crash Me Now!",
  "description": "Crash the browser",
  "version": "1.0",

  "background": { "scripts": ["background.js"] },

  "browser_action": {
    "default_icon": "icons/icon64.png",
    "default_title": "Crash me now!"
  },

  "experiment_apis": {
    "crash": {
      "schema": "crash/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "crash/api.js",
        "paths": [["crash", "crash"]]
      }
    }
  }
}
